{% extends 'base.html.twig' %}

{% block title %}FAQ{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .faq-container {
            max-width: 1000px;
            margin: 60px auto;
            padding: 40px 50px;
            border-radius: 40px;
            background-color: white;
            font-family: 'Luckiest Guy', cursive;
            letter-spacing: 1.5px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

        .faq-title {
            font-size: 2.8rem;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 40px;
        }

        .accordion {
            border: none;
        }

        .accordion-item {
            margin-bottom: 15px; /* lub 20px jeśli chcesz większy odstęp */
            background: none;
            border: none;
            box-shadow: none;
        }
        .accordion-button {
            background-color: #f0e4f2; /* Jasnobłękitnozielony (normalny) */
            color: #2c3e50;
            border-radius: 20px !important;
            padding: 20px;
            transition: background-color 0.3s ease;
            box-shadow: none;
            outline: none;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .accordion-button:hover {
            background-color: #f2e5f4; /* Jasnofioletowy na hover */
        }

        .accordion-button:not(.collapsed) {
            background-color: #f2e5f4; /* Jasnofioletowy po rozwinięciu */
            color: #2c3e50;
            box-shadow: none;
        }

        .accordion-button:hover {
            background-color: #f2e5f4;
        }

        .accordion-collapse {
            border: none;
        }

        .accordion-body {
            background-color: #f9f9f9;
            border-radius: 20px;
            padding: 20px;
            margin-top: 10px;
            text-align: left;
        }

        .faq-form h2 {
            font-size: 1.6rem;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .faq-form button {
            font-size: 1.2rem;
            padding: 12px 30px;
            border-radius: 30px;
            font-weight: bold;
            background-color: #4CAF50;
            border: none;
            color: white;
            margin-top: 15px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .faq-form button:hover {
            transform: scale(1.05);
            background-color: #43a047;
        }
        .accordion-button:focus, .accordion-button:not(.collapsed) { box-shadow: none !important; }

    </style>
{% endblock %}

{% block body %}
    <div class="faq-container">
        <h1 class="faq-title">Najczęściej zadawane pytania</h1>

        {% if form is defined and is_granted('ROLE_ADMIN') %}
            <div class="faq-form mb-5">
                <h2>Dodaj nowe pytanie</h2>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.question) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.position) }}
                    </div>
                </div>
                {{ form_row(form.answer) }}
                <button type="submit">Zapisz</button>
                {{ form_end(form) }}
            </div>
        {% endif %}

        <div class="accordion" id="faqAccordion">
            {% for faq in faqs %}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{ loop.index }}">
                        <button class="accordion-button {{ not loop.first ? 'collapsed' }}" type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapse{{ loop.index }}"
                                aria-expanded="{{ loop.first ? 'true' : 'false' }}"
                                aria-controls="collapse{{ loop.index }}">
                            {{ faq.question }}
                        </button>
                    </h2>
                    <div id="collapse{{ loop.index }}"
                         class="accordion-collapse collapse {{ loop.first ? 'show' }}"
                         aria-labelledby="heading{{ loop.index }}"
                         data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            {{ faq.answer|raw }}
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Brak pytań do wyświetlenia.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
