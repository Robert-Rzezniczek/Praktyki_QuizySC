{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Luckiest Guy', cursive;
        }

        .menu-btn {
            display: block;
            width: 95%;
            max-width: 800px;
            padding: clamp(1.5rem, 2vw, 3rem);
            font-size: clamp(1.8rem, 3.5vw, 3.2rem);
            text-transform: uppercase;
            color: white;
            text-align: center;
            border-radius: 999px;
            text-decoration: none;
            transition: transform 0.2s ease, filter 0.2s ease;
        }

        .menu-btn:hover {
            transform: scale(1.05);
            filter: brightness(1.1);
        }

        .menu-btn.red {
            background-color: #d62828;
        }

        .menu-btn.orange {
            background-color: #f77f00;
        }

        .menu-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 30px;
            margin-top: 80px;
            padding: 0 1rem;
            width: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container d-flex flex-column align-items-center">
        <div class="menu-container">
{#            <a href="{{ path('quiz_menu_view') }}" class="menu-btn red">Quizy</a>#}

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('quiz_index') }}" class="menu-btn red">Quizy</a>
                <a href="{{ path('admin_user_list') }}" class="menu-btn orange">ZarzÄ…dzaj</a>
            {% else %}
                <a href="{{ path('quiz_menu_view') }}" class="menu-btn red">Quizy</a>
                <a href="{{ path('user_edit') }}" class="menu-btn orange">Edytuj dane</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
