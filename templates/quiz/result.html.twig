{% extends 'base.html.twig' %}
{% block title %}
    Wynik - {{ quiz.title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
       .result-card {
            max-width: 1000px;
            margin: 60px auto;
            border-radius: 60px;
            padding: 60px 80px;
            font-family: 'Luckiest Guy', cursive;
            text-align: center;
            letter-spacing: 1.5px;
        }

        .result-header {
            font-size: 4.5rem;
            color: #2e7d32;
            font-weight: bold;
        }

        .result-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 60px;
            font-size: 1.6rem;
            text-align: left;
        }

        .result-section {
            width: 48%;
        }

        .result-details {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        .score-circle {
            width: 260px;
            height: 260px;
            border-radius: 50%;
            margin: 30px auto 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: bold;
            color: #2e7d32 !important;
            background: conic-gradient(#2e7d32 0%, #e0e0e0 0%);
            position: relative;
        }

        .score-circle::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 200px;
            height: 200px;
            background-color: white;
            border-radius: 50%;
            z-index: 1;
        }

        .score-circle span {
            position: relative;
            z-index: 2;
        }

        .result-score-label {
            font-size: 1.6rem;
            margin-top: 15px;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 50px;
            margin-top: 50px;
        }

        .action-buttons a {
            background-color: #9c27b0;
            color: white;
            padding: 20px 50px;
            font-size: 1.6rem;
            border-radius: 50px;
            text-decoration: none;
            transition: transform 0.2s ease;
        }

        .action-buttons a:hover {
            transform: scale(1.05);
            filter: brightness(1.1);
        }

    </style>
{% endblock %}

{% block body %}

    <div class="result-card">
        <h1 class="result-header">BRAWO!</h1>

        <div class="result-info">
            <div class="result-section result-details">
                <p><strong>RozwiƒÖzujƒÖcy:</strong><br>üë§ {{ quizResult.user.profile.imie }} {{ quizResult.user.profile.nazwisko }}</p>
                <p><strong>Wynik:</strong><br>‚úî {{ score }}%</p>
                {% set minutes = duration // 60 %}
                {% set seconds = duration % 60 %}
                <p><strong>Czas:</strong><br>‚è± {{ minutes }} min {{ seconds }} sek</p>

                <p><strong>Data:</strong><br>{{ quizResult.completedAt|date('Y-m-d H:i') }}</p>
            </div>

            <div class="result-section" style="text-align: center;">
                <div class="result-score-label">TW√ìJ WYNIK TO:</div>
                <div class="score-circle" data-score="{{ score }}"><span style="color: #2e7d32 !important">{{ score }}%</span></div>
                <div class="result-score-label">{{ earnedPoints }}/{{ totalPoints }} PKT</div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="{{ path('quiz_menu_view') }}">LISTA QUIZ√ìW</a>
            {% if quiz.isPublished %}
                <a href="">WYNIKI WKR√ìTCE</a>
            {% else %}
                <a href="{{ path('quiz_ranking', {'id': quiz.id}) }}">RANKING</a>
            {% endif %}
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const circle = document.querySelector('.score-circle');
            if (!circle) return;

            const targetScore = Math.min(100, parseFloat(circle.dataset.score));
            let current = 0;
            const step = 1;
            const delay = 10;

            const interval = setInterval(() => {
                if (current >= targetScore) {
                    current = targetScore;
                    clearInterval(interval);
                }
                circle.style.background = `conic-gradient(#2e7d32 ${current}%, #e0e0e0 ${current}% 100%)`;
                current += step;
            }, delay);
        });
    </script>

{% endblock %}
