{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.quiz_result'|trans }} - {{ quiz.title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .result-card {
            max-width: 1000px;
            margin: 60px auto;
            border-radius: 60px;
            padding: 60px 80px;
            font-family: 'Luckiest Guy', cursive;
            text-align: center;
        }

        .result-header {
            font-size: 4rem;
            color: #2e7d32;
            font-weight: bold;
        }

        .result-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 60px;
            font-size: 1.6rem;
            text-align: left;
        }

        .result-section {
            width: 48%;
        }

        .result-details {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .score-circle {
            width: 260px;
            height: 260px;
            border: 14px solid #2e7d32;
            border-radius: 50%;
            margin: 30px auto 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: bold;
        }

        .result-score-label {
            font-size: 1.6rem;
            margin-top: 15px;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 50px;
            margin-top: 50px;
        }

        .action-buttons a {
            background-color: #9c27b0;
            color: white;
            padding: 20px 50px;
            font-size: 1.6rem;
            border-radius: 50px;
            text-decoration: none;
            transition: transform 0.2s ease;
        }

        .action-buttons a:hover {
            transform: scale(1.05);
        }
    </style>

{% endblock %}

{% block body %}
    <div class="result-card">
        <h1 class="result-header">BRAWO!</h1>

        <div class="result-info">
            <div class="result-section result-details">
                <p><strong>RozwiƒÖzujƒÖcy:</strong><br>üë§ {{ quizResult.user.profile.imie }} {{ quizResult.user.profile.nazwisko }}</p>
                <p><strong>Wynik:</strong><br>‚úî {{ score }}%</p>
                {% set minutes = duration // 60 %}
                {% set seconds = duration % 60 %}
                <p><strong>Czas:</strong><br>‚è± {{ minutes }} min {{ seconds }} sek</p>

                <p><strong>Data:</strong><br>{{ quizResult.completedAt|date('Y-m-d H:i') }}
                </p>
            </div>

            <div class="result-section" style="text-align: center;">
                <div class="result-score-label">TW√ìJ WYNIK TO:</div>
                <div class="score-circle">{{ score }}%</div>
{#                <div class="result-score-label">{{ correctAnswers }}/{{ totalQuestions }} PKT</div>#}
            </div>
        </div>

        <div class="action-buttons">
            <a href="{{ path('quiz_menu_view') }}">MENU</a>
            <a href="{{ path('quiz_ranking', {'id': quiz.id}) }}">RANKING</a>
        </div>
    </div>
{% endblock %}

