{% extends 'base.html.twig' %}

{% block title %}{{ quiz.title }} - Start{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="text-primary">{{ quiz.brandName }}</h2>

                    {% if quiz.branddescription %}
                        <p class="mt-2">{{ quiz.branddescription }}</p>
                    {% endif %}
                </div>

                <div class="col-md-4 text-center">
                    {% if quiz.logoFilename %}
                        <img src="{{ asset('uploads/' ~ quiz.logoFilename) }}"
                             alt="{{ quiz.brandName }}"
                             class="img-fluid"
                             style="max-height: 120px; width: auto;">
                    {% endif %}
                </div>
            </div>

            <hr class="my-4">

            <div class="text-center mt-5">
                <p class="fs-5"><strong>Liczba pytań:</strong> {{ quiz.questions|length }}</p>

                {% if quiz.timeLimit %}
                    <p class="fs-5"><strong>Czas na rozwiązanie:</strong> {{ quiz.timeLimit }} minut</p>
                {% endif %}

                <a href="{{ path('quiz_solve', {'id': quiz.id}) }}" class="btn btn-success btn-lg px-5 py-3 mt-3">
                    Rozpocznij quiz
                </a>
            </div>

        </div>
    </div>
{% endblock %}
