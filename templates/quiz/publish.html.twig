{% extends 'base.html.twig' %}

{% block title %}Opublikuj Quiz{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="display-5 text-primary mb-4">Opublikuj Quiz: {{ quiz.title }}</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        {{ form_row(form.duration, {'label': 'Czas publikacji (w minutach)'}) }}
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Opublikuj</button>
            <a href="{{ path('quiz_index') }}" class="btn btn-secondary">Anuluj</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}