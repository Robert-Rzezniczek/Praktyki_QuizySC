{% extends 'base.html.twig' %}

{% block title %}{{ 'Ranking - ' ~ quiz.title|default('Quiz')|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 50px;
            margin-top: 50px;
        }

        .action-buttons a {
            background-color: #9c27b0;
            color: white;
            padding: 20px 50px;
            font-size: 1.6rem;
            border-radius: 50px;
            text-decoration: none;
            transition: transform 0.2s ease;
        }

        .action-buttons a:hover {
            transform: scale(1.05);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="display-6 text-center mb-4">{{ 'Ranking - ' ~ quiz.title|default('Quiz')|trans }}</h1>

        {% if ranking is empty %}
            <div class="alert alert-info text-center">
                {{ 'Brak wynik√≥w dla tego quizu.'|trans }}
            </div>
        {% else %}
            <div class="list-group">
                {% for item in ranking %}
                    <div class="list-group-item d-flex justify-content-between align-items-center {% if '(to ja)' in item.name %}fw-bold bg-light border-primary is-user{% endif %}">
                        <span>
                            {{ item.position }}. {{ item.name }}
                        </span>
                        <span class="badge bg-primary rounded-pill">{{ item.score }} %</span>
                    </div>
                {% endfor %}
            </div>

            {% if userPosition %}
                <div class="alert alert-info mt-3 text-center">
                    Twoja pozycja: <strong>{{ userPosition }}</strong> z wynikiem <strong>{{ userScore }}</strong> %
                </div>
            {% endif %}
        {% endif %}

        <div class="action-buttons">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('quiz_index') }}">QUIZY</a>
            {% else %}
                <a href="{{ path('quiz_menu_view') }}">MENU</a>
            {% endif %}
            {% if result_id is not null and not is_granted('ROLE_ADMIN') %}
                <a href="{{ path('quiz_result', {'id': result_id}) }}">WYNIK</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
