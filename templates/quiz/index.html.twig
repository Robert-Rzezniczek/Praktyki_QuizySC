{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.quiz_list'|trans }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-custom {
            padding: 8px 16px;
            font-size: 0.9rem;
            font-weight: 500;
            border-width: 2px;
            transition: all 0.3s ease;
            border-radius: 6px;
        }

        .btn-outline-success.btn-custom {
            color: #28a745;
            border-color: #28a745;
        }
        .btn-outline-success.btn-custom:hover {
            background-color: #28a745;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
        }

        .btn-outline-primary.btn-custom {
            color: #007bff;
            border-color: #007bff;
        }
        .btn-outline-primary.btn-custom:hover {
            background-color: #007bff;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
        }

        .btn-outline-warning.btn-custom {
            color: #ffc107;
            border-color: #ffc107;
        }
        .btn-outline-warning.btn-custom:hover {
            background-color: #ffc107;
            color: #212529;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(255, 193, 7, 0.3);
        }

        .btn-outline-danger.btn-custom {
            color: #dc3545;
            border-color: #dc3545;
        }
        .btn-outline-danger.btn-custom:hover {
            background-color: #dc3545;
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }

        .btn-group .btn-custom {
            margin-right: 8px;
        }
        .btn-group .btn-custom:last-child {
            margin-right: 0;
        }

        .btn-custom:hover {
            text-decoration: none;
        }

        /* Responsywność */
        @media (max-width: 768px) {
            .btn-custom {
                padding: 6px 12px;
                font-size: 0.85rem;
            }
            .btn-group .btn-custom {
                margin-right: 4px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="display-5 text-primary mb-4">{{ 'title.quiz_list'|trans }}</h1>
        {% if pagination is defined and pagination.items|length %}
            <div class="navigation text-center mb-3">
                {{ knp_pagination_render(pagination) }}
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="add-new mb-3">
                    <a href="{{ url('quiz_create_step') }}" class="btn btn-primary" title="{{ 'action.create'|trans }}">
                        {{ 'action.create'|trans }}
                    </a>
                </div>
            {% endif %}

            <table class="table table-striped table-bordered align-content-center">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'quiz.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'quiz.title') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'quiz.createdAt') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'quiz.updatedAt') }}</th>
                    <th>{{ 'Opublikowany' }}</th>
                    <th>{{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for quiz in pagination.items %}
                    <tr>
                        <td>{{ quiz.id }}</td>
                        <td>{{ quiz.title }}</td>
                        <td>{{ quiz.createdAt|format_date('long') }}</td>
                        <td>{{ quiz.updatedAt|format_date('long') }}</td>
                        <td>
                            {% if quiz.isPublished %}
                                {{ 'TAK' }}
                            {% else %}
                                {{ 'NIE' }}
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group d-flex justify-content-end align-items-center" role="group">
                                {% if is_granted('ROLE_ADMIN') %}
                                    {% if quiz.isPublished %}
                                        <a class="btn btn-outline-danger btn-custom" href="{{ url('quiz_unpublish', {id: quiz.id}) }}" title="Usuń publikację">
                                            Ukryj quiz
                                        </a>
{#                                        <a class="btn btn-outline-success btn-custom me-2" href="{{ url('quiz_solve', {id: quiz.id}) }}" title="{{ 'action.solve'|trans }}">#}
{#                                            {{ 'action.solve'|trans }}#}
{#                                        </a>#}
                                    {% else %}
                                        <a class="btn btn-outline-success btn-custom me-2" href="{{ url('quiz_publish', {id: quiz.id}) }}" title="{{ 'action.publish'|trans }}">
                                            {{ 'Opublikuj '}}
                                        </a>
                                    {% endif %}
                                    <a class="btn btn-outline-success btn-custom me-2" href="{{ url('quiz_ranking', {id: quiz.id}) }}" title="{{ 'action.check_ranking'|trans }}">
                                        {{ 'Ranking' }}
                                    </a>
                                    <a class="btn btn-outline-primary btn-custom me-2" href="{{ url('quiz_view', {id: quiz.id}) }}" title="{{ 'Edycja brandingu' }}">
                                        Edycja brandingu
                                    </a>

                                    <a class="btn btn-outline-primary btn-custom me-2" href="{{ url('quiz_view_quiz', {id: quiz.id}) }}" title="{{ 'action.preview'|trans }}">
                                        {{ 'action.preview'|trans }}
                                    </a>
                                    <a class="btn btn-outline-warning btn-custom me-2" href="{{ url('quiz_edit_step', {id: quiz.id}) }}" title="{{ 'action.edit'|trans }}">
                                        {{ 'action.edit'|trans }}
                                    </a>
                                    <a class="btn btn-outline-danger btn-custom" href="{{ url('quiz_delete', {id: quiz.id}) }}" title="{{ 'action.delete'|trans }}">
                                        {{ 'action.delete'|trans }}
                                    </a>
                                {% else %}
                                    <a class="btn btn-outline-success btn-custom me-2" href="{{ path('quiz_start_view', {id: quiz.id}) }}" title="Rozpocznij quiz">
                                        Rozpocznij
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <p class="alert alert-info">{{ 'message.empty_list'|trans }}</p>
        {% endif %}
    </div>
{% endblock %}