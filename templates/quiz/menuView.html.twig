{% extends 'base.html.twig' %}

{% block title %}Wyb√≥r quizu{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .quiz-box-link {
            display: block;
            text-decoration: none;
            color: inherit;
            margin-bottom: 30px;
        }

        .quiz-box {
            position: relative;
            width: 520px;
            padding: 32px 40px;
            margin: 0 auto;
            border: 4px solid;
            border-radius: 40px;
            font-family: 'Luckiest Guy', cursive;
            text-align: center;
            background-color: white;
            letter-spacing: 1.5px;
            transition: box-shadow 0.2s ease, transform 0.2s ease;
        }

        .quiz-box.completed {
            border-color: #388e3c;
        }

        .quiz-box.not-completed {
            border-color: #d32f2f;
        }

        .quiz-title {
            font-size: 2rem;
            font-weight: bold;
            color: #000;
            margin-bottom: 14px;
        }

        .quiz-status.green,
        .quiz-status.red {
            font-size: 1.3rem;
        }

        .quiz-status.green {
            color: green;
        }

        .quiz-status.red {
            color: red;
        }

        .quiz-score {
            color: black;
            font-weight: bold;
            font-size: 1.3rem;
            margin-top: 12px;
        }

        .quiz-link {
            color: red;
            font-weight: bold;
        }

        .quiz-box-link:hover .quiz-box {
            transform: scale(1.03);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
        }
    </style>
{% endblock %}

{% block body %}
    {% for quiz in quizzes %}
        <a href="{% if is_granted('ROLE_ADMIN') %}
                    {{ path('quiz_view', { id: quiz.quiz_id }) }}
                {% else %}
                    {% if quiz.completed %}
                        {{ path('quiz_result', { id: quiz.quiz_result }) }}
                    {% else %}
                        {{ path('quiz_start_view', { id: quiz.quiz_id }) }}
                    {% endif %}
                {% endif %}"
           class="quiz-box-link">
            <div class="quiz-box {{ quiz.completed ? 'completed' : 'not-completed' }}">
                <div class="quiz-title">{{ quiz.title }}</div>

                {% if quiz.completed %}
                    <div class="quiz-status green">Test wype≈Çniony üèÜ</div>
                    <div class="quiz-score">Wynik: {{ quiz.score }}%</div>
                {% else %}
                    <div class="quiz-status red">Test niewype≈Çniony</div>
                    <div class="quiz-link">Kliknij aby wype≈Çniƒá</div>
                {% endif %}
            </div>
        </a>
    {% endfor %}
{% endblock %}

