{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="mb-4">Lista użytkowników</h1>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Hasło</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Szkoła</th>
            <th>Województwo</th>
            <th>Powiat</th>
            <th>Edukacja</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if user.password %}
                        <span class="text-success fw-bold">✓</span>
                    {% else %}
                        <span class="text-danger fw-bold">✗</span>
                    {% endif %}
                </td>
                <td>{{ user.profile ? user.profile.imie : '-' }}</td>
                <td>{{ user.profile ? user.profile.nazwisko : '-' }}</td>
                <td>{{ user.profile ? user.profile.szkola : '-' }}</td>
                <td>{{ user.profile ? (user.profile.wojewodztwo ? user.profile.wojewodztwo.name : '-') : '-' }}</td>
                <td>{{ user.profile ? (user.profile.powiat ? user.profile.powiat.name : '-') : '-' }}</td>
                <td>{{ user.profile ? (user.profile.podzialWiekowy ? user.profile.podzialWiekowy.value : '-') : '-' }}</td>
                <td>
                    <a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn btn-sm btn-primary me-1">Edytuj</a>
                    <a href="{{ path('admin_user_edit', { id: user.id }) }}#haslo" class="btn btn-sm btn-warning">Zmień hasło</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10" class="text-center">Brak użytkowników</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
