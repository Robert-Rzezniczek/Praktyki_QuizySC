{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-form-container {
            max-width: 600px;
            margin: 60px auto;
            font-family: 'Jost', sans-serif;
            color: #1e1f22;
            padding: 30px;
            border-radius: 24px;
            background: #fff;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .edit-form-container h1 {
            font-family: 'Luckiest Guy', cursive;
            font-size: 3rem;
            color: #0399e3;
            margin-bottom: 30px;
        }

        .edit-form-container form > * {
            margin-bottom: 20px;
        }

        .edit-form-container .form-group {
            text-align: left;
        }

        .edit-form-container label {
            font-weight: bold;
            color: #0399e3;
            margin-bottom: 5px;
            display: block;
        }

        .edit-form-container input,
        .edit-form-container select {
            width: 100%;
            padding: 12px 16px;
            border-radius: 12px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

        .edit-form-container button {
            display: block;
            width: 100%;
            padding: 14px 28px;
            font-size: 1.4rem;
            font-family: 'Luckiest Guy', cursive;
            border: none;
            border-radius: 40px;
            color: white;
            margin-top: 10px;
            transition: transform 0.2s ease;
        }

        .edit-form-container button:hover {
            transform: scale(1.05);
        }
        .btn-primary:hover {
            background-color: #a51b1d;
            color: white;
        }

        .btn-danger:hover {
            background-color: #b0154f;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #8e24aa;
            color: white;
        }

        .btn-primary {
            background-color: #c82123;
        }

        .btn-danger {
            background-color: #d51b60;
        }

        .btn-secondary {
            background-color:#9c27b0;
        }
        .btn-primary:focus,
        .btn-primary:active {
            background-color: #c82123 !important;
            color: white !important;
            box-shadow: none !important;
            outline: none !important;
        }

        .btn-danger:focus,
        .btn-danger:active {
            background-color: #d51b60 !important;
            color: white !important;
            box-shadow: none !important;
            outline: none !important;
        }

        .btn-secondary:focus,
        .btn-secondary:active {
            background-color: #8e24aa !important;
            color: white !important;
            box-shadow: none !important;
            outline: none !important;
        }

    </style>
{% endblock %}

{% block title %}Edytuj dane{% endblock %}
{% block body %}
    <div class="edit-form-container">
        <h1>Edytuj dane</h1>

        {{ form_start(editForm) }}
        {{ form_row(editForm.imie) }}
        {{ form_row(editForm.nazwisko) }}
        {{ form_row(editForm.szkola) }}
        {{ form_row(editForm.wojewodztwo) }}
        {{ form_row(editForm.powiat) }}
        {{ form_row(editForm.podzialWiekowy) }}

        <button class="btn btn-primary">Zapisz</button>
        {{ form_end(editForm) }}

        <form method="post" action="{{ path('user_delete_account') }}"
              onsubmit="return confirm('Usunięcie konta spowoduje również usunięcie Twoich wyników. Czy na pewno chcesz usunąć swoje konto? Tej operacji nie można cofnąć.');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete-account') }}">
            <button class="btn btn-danger">Usuń moje konto</button>
        </form>

        <button type="button" class="btn btn-secondary" onclick="history.back()">Wróć</button>
    </div>
{% endblock %}

